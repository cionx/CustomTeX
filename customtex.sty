	wide          = 0pt,
	before        = {\renewcommand{\makelabel}{\dotlabel}},
	listparindent = \parindent,
	parsep        = 0pt
}

% shortcuts for the items in implicationslist
\newcommand{\addperiod}[1]{#1.}
